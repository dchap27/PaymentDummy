<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ng.com.dayma.paymentdummy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_myapp_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_myapp_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ScheduleActivity"
            android:label="@string/title_activity_schedule"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".PaymentActivity"
            android:label="@string/title_activity_payment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PaymentListActivity"
            android:label="Payments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScheduleListActivity"
            android:label="@string/title_activity_schedule_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ng.com.dayma.paymentdummy.MainActivity" />
        </activity>

        <provider
            android:name=".data.PaymentProvider"
            android:authorities="${applicationId}.provider"
            android:enabled="true"
            android:exported="true" />
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>